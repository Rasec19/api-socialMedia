{
    "tags": {
      "allowUnknownTags": true
    },
    "source": {
      "include": ["src"],
      "includePattern": ".ts$",
      "excludePattern": "(node_modules|dist)"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
      "recurse": true,
      "destination": "./docs",
      "template": "./node_modules/swagger-jsdoc-template",
      "readme": "./README.md"
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false
    }
}